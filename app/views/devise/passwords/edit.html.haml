= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, role: 'form', class: 'form-horizontal'}) do |f|
 .container
  .row
   .col-md-offset-3.col-md-6.round-box.devise
    .modal-header.devise
     %h3.modal-title.devise= t('devise.passwords.change_form')
    .modal-body
     = devise_error_messages!
     = f.hidden_field :reset_password_token
     .form-group
      %label.col-md-4.control-label.devise{for: 'inputPassword1'}= t('label.new_password')
      .col-md-8
       = f.password_field :password, class: 'form-control', id: 'inputPassword1', placeholder: t('label.new_password').downcase
     .form-group
      %label.col-md-4.control-label.devise{for: 'inputConfirmPassword1'}= t('label.confirm_new_password')
      .col-md-8
       = f.password_field :password_confirmation, class: 'form-control', id: 'inputConfirmPassword1', placeholder: t('label.confirm_new_password').downcase
     .form-group
      .col-md-offset-2.col-md-10
       %br/
       = f.submit t('button.update_password'), class: 'btn btn-success'
    .modal-footer.devise
     = render 'devise/shared/links'