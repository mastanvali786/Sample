= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, role: 'form', class: 'form-horizontal'}) do |f|
 .container
  .row
   .col-md-offset-3.col-md-6.round-box.devise
    .modal-header.devise
     %h3.modal-title.devise= t('button.forgot_password')
    .modal-body
     = devise_error_messages!
     .form-group
      %label.col-md-2.control-label.devise{for: 'inputEmail1'}= t('label.email')
      .col-md-10
       = f.email_field :email, class: 'form-control', id: 'inputEmail1', placeholder: t('label.email_example').downcase
     .form-group
      .col-md-offset-2.col-md-10
       %br/
       = f.submit t('button.forgot_password'), class: 'btn btn-success'
    .modal-footer.devise
     = render 'devise/shared/links'